{
    "name": "connection-sharing-sample",
    "displayName": "Connection Sharing Sample",
    "publisher": "ms-mssql",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "connection-sharing-sample.commands",
                "title": "Connection sharing using commands",
                "category": "ConnSharing"
            },
            {
                "command": "connection-sharing-sample.apis",
                "title": "Connection sharing using APIs",
                "category": "ConnSharing"
            },
            {
                "command": "connection-sharing-sample.availableConnections",
                "title": "Show a count of available connections",
                "category": "ConnSharing"
            },
            {
                "command": "connection-sharing-sample.requestApproval",
                "title": "Request Approval for Connection Sharing",
                "category": "ConnSharing"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "eslint": "^9.25.1",
        "esbuild": "^0.25.3",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.8.3",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2"
    }
}
