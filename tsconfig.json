{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "out",
        "module": "CommonJS",
        "target": "ES6",
        "lib": [
            "es6",
            "ES2020",
            "dom"
        ],
        "sourceMap": true,
        "allowUnusedLabels": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "noUnusedLocals": true,
        "skipLibCheck": true, // This check is added as typescript compiler finds conflicting definitions in azdata and vscode library
    },
    "exclude": [
        "node_modules"
    ]
}