{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "out",
        "module": "CommonJS",
        "target": "ES6",
        "lib": [
            "es6",
            "ES2020",
            "dom"
        ],
        "sourceMap": true,
        "allowUnusedLabels": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "noUnusedLocals": true,
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ]
    },
    "src": [
        "src",
        "typings"
    ],
    "exclude": [
        "node_modules",
        "mssql-react-app",
        "src/views"
    ]
}