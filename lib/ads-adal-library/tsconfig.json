{
	"compilerOptions": {
	  "target": "es2017",
	  "module": "commonjs",
	  "outDir": "dist",
	  "sourceMap": true,
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "strict": true,
	  "declaration": true,
	  "skipLibCheck": true, // This check is added as typescript compiler finds conflicting definitions in azdata and vscode library
	},
	"include": [
	  "src/**/*.ts"
	]
  }